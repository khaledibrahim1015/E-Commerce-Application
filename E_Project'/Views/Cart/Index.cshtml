@model IEnumerable<Product>

@if(Model.Any())
{
    

<form method="post" asp-action="Index">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container row">
            <div class="col -8">
                <div class="card mt-4">
                    <div class="card-header bg-dark text-light ml-0 row container">
                        <div class="col-6">
                            <i class="fa fa-shopping-cart"></i> &nbsp;
                            Shopping Cart
                        </div>
                        <div class="col-6 text-right">
                            <a  asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row" style="color:#821f3d">
                                <div class="col-lg-2">
                                </div>
                                <div class="col-12 col-lg-7">
                                    Product Details
                                </div>
                                <div class="col-12 col-lg-2">
                                    Price per EGP
                                </div>
                                <div class="col-6 col-sm-4 col-lg-1">
                                </div>
                            </div>
                        </div>

                        <hr />
                        @foreach(var product in Model)
                        {
                            <div class="row h-100">
                                <div class="col-4 col-md-2 text-center py-2">
                                    <img src="@WC.ImagePath@product.Image" class="rounded" width="100%" />
                                </div>
                                <div class="col-8 col-lg-7">
                                    <h5>@product.Name</h5>
                                    <div style="font-size:11px;">@product.ShortDescription</div>
                                </div>
                                <div class="col-3 col-lg-2 pt-lg-4" style="font-size:11px;">
                                    <span style="font-size:17px;"> @product.Price</span>/ Egp

                                </div>
                                <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                    <a asp-controller="Cart" asp-action="Remove" asp-route-Id="@product.Id" class="btn btn-outline-danger">
                                        <i  class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </div>

                      
                       
                        <hr />
                        }
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Continue</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
}
else
{

    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Well done!</h4>
        <p>Aww yeah, you successfully read this important alert message. No Product Selected in Your Cart !!</p>
        <hr>
        <p class="mb-0">You Can Go <a asp-controller="Home" asp-action="Index">find Product from here</a> </p>
    </div>
}
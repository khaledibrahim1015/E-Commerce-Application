@model E_Project_.Models.ApplicationType

@{
    ViewData["Title"] = "Delete Application Type";
}


<form asp-action="Delete" method="post">
    <div class="border p-3">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group row">
        <h2 class="text-info pl-3"> Delete Application Type </h2>

    </div>

    <div class="row">
        <div class="col-8">

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name" ></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" disabled />
                    <span asp-validation-for="Name" class="text-danger" ></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4 row">
                    <div class="col">
                    <input type="submit" value="Delete" class="btn btn-info w-100" />
                    </div>
                <div class="col">
                            <a asp-controller="ApplicationType" asp-action="Index" class="btn btn-success"><i class="fas fa-sign-out"></i> Back  </a>
                </div>
                <div class="col">
                            <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@Model.Id" class="btn btn-success">  <i class="fas fa-edit"></i> Upadte </a>
                </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-4">
    </div>
    </div>


    </div>
</form>
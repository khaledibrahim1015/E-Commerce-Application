@model IEnumerable<E_Project_.Models.ApplicationType>

@{

    ViewData["Title"] = "Index";

}
    
<div class="container">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-primary"> ApplicationType List </h2>
        </div>

        <div class="col-6  text-right">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary"><i class="fa fa-solid fa-plus"></i> &nbsp; Create New Application Type </a>
        </div>

    </div>

    <br /> <br />
    @if(Model.Any())
    {
        <table class="table table-bordered  table-striped table-hover" style="width:100%">

           <thead>
               <tr>
                    <th> Name</th>
               </tr>
           </thead>
           <tbody>
               @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td class="text-center">
                            <div class ="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a asp-controller="ApplicationType" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="fa fa-trash"></i>
                                    </a>
                            </div>
                        </td>



                    </tr>



                }


           </tbody>

        </table>











    }
    else
    {
        <div class="alert alert-success" role="alert">
            <h4 class="alert-heading">Well done!</h4>
            <p>Aww yeah, you successfully read this important alert message. No ApplicationTypes Found Yet!!</p>
            <hr>
            <p class="mb-0">You Can Go <a asp-controller="Product" asp-action="Index">find Product from here</a> </p>
        </div>
    }





</div>